# LLM provider: openai | anthropic | gemini | ollama
LLM_PROVIDER=openai

# OpenAI (or compatible)
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o

# Anthropic
ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620

# Gemini
GEMINI_API_KEY=
GEMINI_BASE_URL=
GEMINI_MODEL=gemini-1.5-pro

# Ollama (local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# Zotero (optional)
ZOTERO_API_KEY=
ZOTERO_USER_ID=
ZOTERO_LIBRARY_TYPE=user
ZOTERO_DEFAULT_COLLECTION=ArXiv Daily
ZOTERO_ATTACHMENT_MODE=none
ZOTERO_LINKED_DIR=

# Archive root for downloaded PDFs (default: ~/daily-report/arxiv)
ARCHIVE_ROOT_DIR=

# Daily scheduler (optional)
DAILY_ENABLED=true
DAILY_HOUR=8
DAILY_MINUTE=0
DAILY_QUERIES=LLM,large language model,retrieval augmented generation,RAG,agent
DAILY_MAX_RESULTS=30
DAILY_USE_LLM=true

# PDF parsing (optional)
USE_PDF_FULLTEXT=true
PDF_BODY_MAX_PAGES=15
PDF_BODY_MAX_TOKENS=10000
PDF_CACHE_TTL_DAYS=30
USE_ARXIV_SOURCE=true
ARXIV_SOURCE_MIN_CHARS=2000
ARXIV_SOURCE_MAX_MB=30
ARXIV_SOURCE_TTL_DAYS=30
ARXIV_SOURCE_KEEP_ARCHIVE=false
